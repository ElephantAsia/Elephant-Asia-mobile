<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.elephantasia.elephantasia">

    <application
        android:name="fr.elephantasia.elephantasia.utils.BaseApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="fr.elephantasia.elephantasia.activities.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="fr.elephantasia.elephantasia.activities.AddElephantActivity"/>
        <activity android:name="fr.elephantasia.elephantasia.activities.LoginActivity" />
        <activity android:name="fr.elephantasia.elephantasia.activities.MainActivity" />
        <activity android:name="fr.elephantasia.elephantasia.activities.SearchActivity" />
        <activity android:name="fr.elephantasia.elephantasia.activities.SearchBrowserActivity"/>
        <activity android:name="fr.elephantasia.elephantasia.activities.ConsultationActivity"/>

    </application>

</manifest>