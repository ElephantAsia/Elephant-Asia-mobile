<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textSize="16sp"
            android:id="@+id/search_elephant_name"
            android:inputType="text"
            android:hint="@string/elephant_name"
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:enabled="false"
            android:textSize="16sp"
            android:id="@+id/search_elephant_ship"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="@string/elephant_microship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/search_elephant_sex"
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/search_elephant_country"
                android:layout_width="0dp"
                android:layout_weight="1.25"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <EditText
            android:enabled="false"
            android:textSize="16sp"
            android:id="@+id/search_elephant_district"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="@string/district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:enabled="false"
            android:textSize="16sp"
            android:id="@+id/search_elephant_village"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="@string/village"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:enabled="false"
            android:textSize="16sp"
            android:id="@+id/search_elephant_camp_name"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="@string/camp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textSize="16sp"
            android:enabled="false"
            android:id="@+id/search_elephant_referent_name"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="@string/referent_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textSize="16sp"
            android:enabled="false"
            android:id="@+id/search_elephant_referent_id"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="@string/referent_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/search_button_search"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/search"
        android:layout_width="120dp"
        android:layout_height="60dp" />

</RelativeLayout>
