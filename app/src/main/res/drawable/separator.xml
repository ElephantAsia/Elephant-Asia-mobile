<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/secondary_light" /> <!-- border color -->
    </shape>
  </item>

  <item
    android:bottom="2dp"
    android:top="0dp">   <!-- adjust borders width here -->
    <shape android:shape="rectangle">
      <solid android:color="@color/primary" />  <!-- background color -->
    </shape>
  </item>
</layer-list>