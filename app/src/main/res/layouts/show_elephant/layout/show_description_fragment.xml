<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="e"
            type="fr.elephantasia.database.model.Elephant"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/elephant_consultation_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="@color/grey_light_100"
                        android:textSize="14sp"/>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/elephant_consultation_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{e.name}"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nickname"
                        android:textColor="@color/grey_light_100"
                        android:textSize="14sp"/>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/elephant_consultation_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{e.nickName}"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/id_number"
                        android:textColor="@color/grey_light_100"
                        android:textSize="14sp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/identification_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{e.regID}"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"/>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chip"
                        android:textColor="@color/grey_light_100"
                        android:textSize="14sp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/elephant_consultation_chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{e.chips1}"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"/>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/birth_date"
                        android:textColor="@color/grey_light_100"
                        android:textSize="14sp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/elephant_consultation_birth_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{e.birthDate}"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"/>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/elephantasia_db_number"
                        android:textColor="@color/grey_light_100"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/elephant_consultation_edn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{e.id}"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/eartag"
                        android:textColor="@color/grey_light_100"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/elephant_consultation_ear_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{e.earTag ? @string/yes_enabled : @string/no_disabled}'
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>