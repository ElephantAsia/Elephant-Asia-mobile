<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="e"
            type="fr.elephantasia.database.model.Elephant"/>

        <import type="fr.elephantasia.database.model.Location" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary_grey_100">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

            </android.support.v7.widget.Toolbar>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@android:color/white"
                app:tabMode="scrollable"
                app:tabTextAppearance="@style/App_TabTextAppearance"/>

        </android.support.design.widget.AppBarLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/search_overview_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/stripe"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/search_overview_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="17dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/elephant"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/search_overview_photo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/search_overview_photo"
                    android:layout_toRightOf="@id/search_overview_photo"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/chip1"
                        android:drawableLeft="@mipmap/ic_sd_storage_white_24dp"
                        android:drawableStart="@mipmap/ic_sd_storage_white_24dp"
                        android:drawablePadding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/location"
                        android:drawableLeft="@mipmap/ic_near_me_white_24dp"
                        android:drawableStart="@mipmap/ic_near_me_white_24dp"
                        android:drawablePadding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/state_local"
                        android:visibility="gone"
                        android:text="@string/not_synchronized_yet"
                        android:drawableLeft="@mipmap/ic_error_outline_white_24dp"
                        android:drawableStart="@mipmap/ic_error_outline_white_24dp"
                        android:drawablePadding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                </LinearLayout>

            </RelativeLayout>


            <Button
                android:id="@+id/delete_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:text="@string/delete"
                android:textColor="@android:color/white"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/edit_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/fab_margin"
                android:src="@android:drawable/ic_menu_edit"
                app:backgroundTint="@color/primary_grey_100"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabSize="mini"
                app:pressedTranslationZ="12dp"
                app:rippleColor="@color/primary_grey_100"/>

        </RelativeLayout>



    </LinearLayout>
</layout>