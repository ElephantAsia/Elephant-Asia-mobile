<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable
      name="e"
      type="fr.elephantasia.database.model.Elephant"/>
    <import type="fr.elephantasia.database.model.Location"/>
  </data>

  <LinearLayout
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

      <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_grey_100">

        <TextView
          android:id="@+id/toolbar_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@android:color/white"
          android:textSize="20sp"/>

      </android.support.v7.widget.Toolbar>

      <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@android:color/white"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/App_TabTextAppearance"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/add_elephant_fab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_margin="@dimen/fab_margin"
      android:src="@mipmap/ic_chevron_right_white_24dp"
      app:backgroundTint="@color/primary_grey_100"
      app:borderWidth="0dp"
      app:elevation="0dp"
      app:fabSize="mini"
      app:pressedTranslationZ="12dp"
      app:rippleColor="@color/primary_grey_100"/>

  </LinearLayout>
</layout>