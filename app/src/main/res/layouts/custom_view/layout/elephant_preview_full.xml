<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/card"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  android:foreground="?android:attr/selectableItemBackground"
  app:cardCornerRadius="2dp"
  app:cardUseCompatPadding="true"
  >

  <RelativeLayout
    android:id="@+id/layout"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/elephant_picture"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_alignParentEnd="true"
      android:layout_gravity="end"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      android:adjustViewBounds="true"
      android:contentDescription="@null"
      android:scaleType="fitCenter"
      android:src="@mipmap/elephant_placeholder"/>

    <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_toStartOf="@id/elephant_picture"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:paddingTop="24dp"
      android:textColor="@color/primary"
      android:textSize="24sp"/>

    <TextView
      android:id="@+id/gender"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/name"
      android:layout_marginStart="10dp"
      android:drawablePadding="5dp"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:paddingTop="16dp"
      android:textColor="@color/primary_light"
      android:textSize="14sp"/>

    <TextView
      android:id="@+id/age"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/name"
      android:layout_toEndOf="@+id/gender"
      android:drawablePadding="5dp"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:paddingTop="16dp"
      android:textColor="@color/primary_light"
      android:textSize="14sp"/>

    <TextView
      android:id="@+id/weight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/gender"
      android:layout_marginStart="10dp"
      android:drawablePadding="5dp"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:paddingTop="16dp"
      android:textColor="@color/primary_light"
      android:textSize="14sp"/>


    <TextView
      android:id="@+id/height"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@+id/age"
      android:layout_below="@+id/age"
      android:layout_toEndOf="@+id/weight"
      android:drawablePadding="5dp"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:paddingTop="16dp"
      android:textColor="@color/primary_light"
      android:textSize="14sp"/>

    <TextView
      android:id="@+id/action_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/elephant_picture"
      android:layout_margin="8dp"
      android:height="36dp"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground"
      android:gravity="center"
      android:minWidth="64dp"
      android:paddingEnd="8dp"
      android:paddingStart="8dp"
      android:textAllCaps="true"
      android:textColor="@color/accent"
      android:textSize="14sp"/>

    <TextView
      android:id="@+id/show_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/elephant_picture"
      android:layout_margin="8dp"
      android:layout_toEndOf="@id/action_button"
      android:height="36dp"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground"
      android:gravity="center"
      android:minWidth="64dp"
      android:paddingEnd="8dp"
      android:paddingStart="8dp"
      android:text="@string/show"
      android:textAllCaps="true"
      android:textColor="@color/accent"
      android:textSize="14sp"/>

    <CheckBox
      android:id="@+id/checkbox"
      android:focusable="false"
      android:clickable="false"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      />

  </RelativeLayout>


</android.support.v7.widget.CardView>
