<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="140dp"
  android:descendantFocusability="blocksDescendants"
  android:paddingEnd="5dp"
  android:paddingLeft="5dp"
  android:paddingRight="5dp"
  android:paddingStart="5dp"
  android:paddingTop="5dp"
  android:background="@android:drawable/dialog_holo_light_frame"
  android:theme="@style/AppThemeWhiteBackground">

  <ImageView
    android:id="@+id/search_overview_background"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:contentDescription="@null"
    android:scaleType="centerCrop"
    android:src="@mipmap/stripe"/>

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/search_overview_photo"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginLeft="17dp"
    android:layout_marginStart="17dp"
    android:layout_centerVertical="true"
    android:layout_marginTop="17dp"
    android:contentDescription="@null"
    android:src="@mipmap/elephant"/>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/search_overview_photo"
    android:layout_marginLeft="20dp"
    android:layout_marginStart="20dp"
    android:layout_toEndOf="@id/search_overview_photo"
    android:layout_toRightOf="@id/search_overview_photo"
    android:orientation="vertical">

    <TextView
      android:id="@+id/profil"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:textColor="@android:color/white"
      android:textSize="16sp"
      android:textStyle="bold"/>

    <TextView
      android:id="@+id/chip1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:drawableLeft="@mipmap/ic_sd_storage_white_24dp"
      android:drawablePadding="5dp"
      android:drawableStart="@mipmap/ic_sd_storage_white_24dp"
      android:textColor="@android:color/white"
      android:textSize="16sp"/>

    <TextView
      android:id="@+id/location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:drawableLeft="@mipmap/ic_near_me_white_24dp"
      android:drawablePadding="5dp"
      android:drawableStart="@mipmap/ic_near_me_white_24dp"
      android:textColor="@android:color/white"
      android:textSize="16sp"/>

    <TextView
      android:id="@+id/state_local"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:drawableLeft="@mipmap/ic_error_outline_white_24dp"
      android:drawablePadding="5dp"
      android:drawableStart="@mipmap/ic_error_outline_white_24dp"
      android:text="@string/not_synchronized_yet"
      android:textColor="@android:color/white"
      android:textSize="16sp"
      android:visibility="gone"/>


  </LinearLayout>

  <ImageButton
    android:id="@+id/remove_elephant"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/transparent"
    android:contentDescription="@string/remove_contact_from_list"
    android:src="@mipmap/ic_cancel_white_24dp"
    android:visibility="gone"/>

  <ImageButton
    android:id="@+id/favorite_elephant_off"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/transparent"
    android:contentDescription="@string/remove_elephant_from_list"
    android:src="@mipmap/ic_star_border_white_24dp"
    android:visibility="gone"/>

</RelativeLayout>
